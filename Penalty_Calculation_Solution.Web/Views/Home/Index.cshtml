@using Penalty_Calculation_Solution.Web.ViewModels
@model IndexViewModel
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <h2>Calculate Page</h2>
        <hr />
    </div>
    <div class="row">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <div class="col-md-6 col-md-offset-3">
                    @Html.ValidationSummary(false)
                    @*@Html.HiddenFor(model => model.Book.ID)*@
                    <div class="form-group">
                        @Html.LabelFor(model => model.Book.CheckOut, htmlAttributes: new { @class = "control-label col-md-3 " })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Book.CheckOut, new { htmlAttributes = new { @class = "form-control date" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Book.ReturnedDate, htmlAttributes: new { @class = "control-label col-md-3 " })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Book.ReturnedDate, new { htmlAttributes = new { @class = "form-control date" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Book.Country, htmlAttributes: new { @class = "control-label col-md-3 " })
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.Book.Country.ID, Model.CountryData, "Please Select Country", new { @class = "form-control dropdown" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-6">
                            <input type="submit" value="Calculate" class="btn btn-success" />
                            @Html.ActionLink("İptal", "Index", "Home", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script>// Datetime picker için Jquery kodu
    $(document).ready(function () {
        $(".date").datepicker({
            dateFormat: "dd-mm-yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "2019:2019",
            //showOn: "both",
            buttonText: "<span class='glyphicon glyphicon-calendar'></span>"
        });
    });</script>